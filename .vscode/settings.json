{
    // Python.exe Path in Virtual Env (Windows)
    // Mac/Linux: "env\\bin\\python.exe",
    "python.pythonPath": "env\\Scripts\\python.exe",

    // Exclude files and folders
    "files.exclude": {
        "**/*.pyc": {"when": "$(basename).py"}, 
        "**/__pycache__": true,
        "**/env": true,
    },
}